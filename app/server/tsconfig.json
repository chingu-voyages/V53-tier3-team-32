{
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": false,
    "checkJs": false,
    "isolatedModules": true,
    "sourceMap": false, // Disables source maps to reduce memory usage
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types", "./types"],
    
    "incremental": true, // Speeds up rebuilds
    "skipLibCheck": true, // Skips type-checking dependencies
    "noEmitOnError": false // Ensures compilation continues even with errors
  }
}
